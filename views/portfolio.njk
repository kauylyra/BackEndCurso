    {% extends "layout.njk" %}

    {%block head%}
    <title>Portfolio - Kauy Lyra</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
            rel="stylesheet">
    {% endblock %}

    {% block content %}
    
            <div id="wrapper">
                <h1>Cursos :</h1>
            </div>

        <section class="cards">

            {% for item in items %}

             <div class="card" id="{{item.id}}">

                <div class="card-image">
                        <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
                </div>

                <div class="card-info">
                <p>{{item.title}}</p>
                </div>
            
             </div>

             {% endfor %}
        </section>
        
        <script src="/scripts.js"></script>
{% endblock %}